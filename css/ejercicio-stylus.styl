fuente1 =  'Lato', sans-serif
fuente2 = 'Oswald', sans-serif

color-principal = #333333
color-secundario = #8841da
color-claro = #FFFFFF 

*
    box-sizing: border-box
    margin: 0
    padding: 0

body
    
    font-family: fuente1
    color color-principal

html 
    font-size: 62.5%

.buscador
    width: 100%
    height: 25rem
    padding: 10rem
    background-image url('../images/cover.jpg')
    background-size: cover
    text-align: center 
    &__input
        width: 75%
        height : 6rem
        padding 2rem
        border none
        border-radius 3rem
        font-size 2.5rem
.encabezado--con-filtros
    display flex
    width 90%
    margin 0 auto
    padding 3rem 0
    h2
        margin-top 1rem
        text-transform uppercase
        font-weight 500
        font-size 5rem
        font-family fuente2
    .filtros
        width 25rem
        height 7.5rem
        padding 2rem
        margin-left auto
        span
            text-transform uppercase
            font-family fuente2
        a
            margin-left 2rem
            font-size 2.5rem
